.v-expansion-panel
    &-header
        min-height: 48px
        padding: 16px 0

        .row.no-gutters *
            line-height: 18px

    &--active .v-expansion-panel-header
        min-height: 48px

    &-content__wrap
        padding: 0
    
    &-page__wrap
        padding: 0 24px 0 0

    &::before
        box-shadow: none

.identify
    width: 24px

.metas
    width: 32px
    text-align: center

.describe
    flex: 1 1 0

.attachment
    flex: 1 1 0

.v-expansion-panels--accordion
    .v-expansion-panel::after
        border-top: thin solid rgba(0, 0, 0, 0.12);
        content: "";
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
        transition: 0.2s border-color cubic-bezier(0.4, 0, 0.2, 1), 0.2s opacity cubic-bezier(0.4, 0, 0.2, 1)