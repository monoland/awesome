.letter-space-1
    letter-spacing: 1px !important

.theme--light
    &.v-navigation-drawer 
        .v-divider
            border-color: rgba(17,17,17,0.1)

    &.v-navigation-drawer:not(.v-navigation-drawer--floating) 
        .v-navigation-drawer__border
            background-color: rgba(17,17,17,0.1)
    
    &.v-sheet.v-card.v-card--widget
        border-color: rgba(17,17,17,0.1)

.v-mobile
    height: 100vh
    padding: 0 0 56px 0

    &__wrap
        height: 100%
        overflow-y: auto

.v-search
    position: absolute
    height: 56px
    width: 100%
    z-index: 1

.v-delete
    position: absolute
    height: 56px
    width: 100%
    z-index: 2

.v-page
    position: relative
    min-height: 100%
    height: 100%

.f-nunito
    font-family: nunito

.line-height1
    line-height: 1

.no--search
    padding-right: 24px;

.transparent--grey
    background-color: rgba(158, 158, 158, 0.72)