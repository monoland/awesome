.dialog-move-transition
    &-enter-active, &-leave-active
        transition: 0.18s cubic-bezier(0, 0, 0, 1)
        
    &-enter, &-leave-to
        transform: translateX(100%)

.line-height1
    line-height: 1 !important

.v-application--is-ltr .v-list-item__avatar:first-child
    margin-right: 16px

.v-content 
    &__auth
        &:before
            background: rgba(0, 0, 0, 0.27)
            position: absolute
            content: ''
            display: block
            top: 0
            left: 0
            height: 100%
            width: 100%
            z-index: 0
    
    &__wrap
        z-index: 1